<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/io_customerly__li_conversation_bkg"
    android:foreground="?attr/selectableItemBackground" >

    <ImageView android:id="@id/io_customerly__icona"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/io_customerly__icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:duplicateParentState="true" >

        <TextView android:id="@id/io_customerly__nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.5dp"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/io_customerly__grey_99"
            android:textSize="15sp"
            tools:ignore="Deprecated" />

        <TextView android:id="@id/io_customerly__last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/io_customerly__textcolor_grey__dark"
            android:textSize="14sp"
            android:duplicateParentState="true"
            tools:ignore="Deprecated" />

    </LinearLayout>

    <TextView android:id="@id/io_customerly__time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:singleLine="true"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/io_customerly__grey_66"
        android:textSize="13sp"
        tools:ignore="Deprecated" />

</LinearLayout>