<?xml version="1.0" encoding="utf-8"?>
<animated-rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="500"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080" >
    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false" >
        <size
            android:height="70dp"
            android:width="70dp" />
        <gradient
            android:endColor="@color/io_customerly__blue_2"
            android:startColor="@color/io_customerly__blue_2_transparent"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</animated-rotate>